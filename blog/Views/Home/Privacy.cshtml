@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="text-md-center my-3">
    <h1 class="h3 mb-3 font-weight-light"><i class="fas fa-user-secret"></i> @ViewData["Title"]</h1>
</div>
<p class="lead">
    This website has some features that you are free to test out!
</p>
<ul class="list-unstyled">
    <li>
        <i class="fas fa-store-alt"></i> Store
        <ul>
            <li>
                <p class="text-muted">
                    Online shopping without all the paying?
                    <a asp-action="Index" asp-controller="Register">
                        Make some orders.
                    </a>
                    <br />
                    <small class="text-muted">
                        <i class="fas fa-asterisk"></i> All orders are for demo purposes only.
                    </small>
                </p>
            </li>
        </ul>
    </li>
    <li>
        <i class="fas fa-palette"></i> Themes
        <ul>
            <li>
                <p class="text-muted">
                    Want some style on the site?
                    <a asp-action="Index" asp-controller="Theme">
                        Try applying a theme.
                    </a>
                    <br />
                    <small class="text-muted">
                        <i class="fas fa-asterisk"></i> Themes courtesy of bootswatch.
                    </small>
                </p>
            </li>
        </ul>
    </li>
    <li>
        <i class="fas fa-comments"></i> Chat
        <ul>
            <li>
                <p class="text-muted">
                    A chat feature for greetings, weather, stocks and more!
                    <a asp-action="Index" asp-controller="Chat">
                        Ask a question.
                    </a>
                    <br />
                    <small class="text-muted">
                        <i class="fas fa-asterisk"></i> Responses are limited, you must ask the right questions.
                    </small>
                </p>
            </li>
        </ul>
    </li>
</ul>
