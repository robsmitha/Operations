@model IEnumerable<rod.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-md-center my-3">
    <h1 class="h3 mb-3 font-weight-light"><i class="fas fa-history"></i> Orders</h1>
</div>

<table id="table_orders" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="d-none d-sm-table-cell">
                Order ID
            </th>
            <th class="d-none d-sm-table-cell">
                Total
            </th>
            <th class="d-none d-sm-table-cell">
                Placed By
            </th>
            <th>
                Merchant
            </th>
            <th class="d-none d-sm-table-cell">
                Order Status
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="d-none d-sm-table-cell">
                    @item.ID
                </td>
                <td class="d-none d-sm-table-cell">
                    TOTAL
                </td>
                <td class="d-none d-sm-table-cell">
                    @if (item?.Customer != null && !string.IsNullOrWhiteSpace(item.Customer.Email))
                    {
                        @item.Customer.Email
                    }
                    else if (item?.User != null && !string.IsNullOrWhiteSpace(item.User.Email))
                    {
                        @item.User.Email
                    }
                    else
                    {
                        <span>Guest</span>
                    }
                </td>
                <td>
                    @item.Merchant.MerchantName
                </td>
                <td class="d-none d-sm-table-cell">
                    @item.OrderStatusType.Description
                </td>
                <td>
                    @item.CreatedAt.ToShortDateString()
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                        Detail
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#table_orders').DataTable(
            {
                responsive: true,
                "order": [0, 'desc']
            })
    })
</script>