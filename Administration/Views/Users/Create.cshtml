@model UserCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3 font-weight-light">Create User</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Users" asp-action="Create">
            <div class="text-md-center">
                @Html.ValidationMessage("CustomError")
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-label-group">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-label-group">
                <input asp-for="MiddleName" class="form-control" placeholder="Middle Name" />
                <label asp-for="MiddleName"></label>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-label-group">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-label-group">
                <input asp-for="Email" class="form-control" placeholder="Email Address" required />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-label-group">
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="row">
                <div class="col-6">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" asp-controller="Users" class="btn btn-lg btn-secondary btn-block">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>