@model IEnumerable<Merchant>

@{
    ViewData["Title"] = "Merchants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-2">
    <div class="col-md">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="col-md-auto">
        <a class="btn btn-primary btn-block" asp-action="Create">Create New</a>
    </div>
</div>
<table class="table table-striped bg-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MerchantName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebsiteUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelfBoardingApplication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBillable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MerchantType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WebsiteUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelfBoardingApplication)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBillable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantType.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/Merchants/Index.cshtml.js"></script>
}