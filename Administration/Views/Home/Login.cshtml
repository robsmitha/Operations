@model LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}

<!-- Custom styles for this page -->
<link href="~/css/login.css" rel="stylesheet">


<form class="form-signin" method="post" asp-controller="Home" asp-action="LoginAsync">

    <div class="text-md-center mb-4">
        <h1 class="h3 mb-3 font-weight-light"><i class="fas fa-sign-in-alt"></i> Sign in</h1>
    </div>

    <div class="form-label-group">
        <input asp-for="Username" class="form-control" placeholder="Username" required autofocus />
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-label-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <a asp-action="SignUp" asp-controller="Home" class="btn btn-lg btn-secondary btn-block">
        Sign up
    </a>
</form>
