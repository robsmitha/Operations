@model  ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom styles for this page -->
<link href="~/css/change-password.css" rel="stylesheet">


<form class="form-change-password" method="post" asp-controller="Home" asp-action="ChangePassword">

    <div class="text-md-center mb-4">
        <h1 class="h3 mb-3 font-weight-light"><i class="fas fa-retweet"></i> Change Password</h1>
        @Html.ValidationMessage("CustomError")
    </div>

    <div class="form-label-group">
        <input asp-for="OldPassword" class="form-control" placeholder="Old Password" required autofocus />
        <label asp-for="OldPassword"></label>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <div class="form-label-group">
        <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" required />
        <label asp-for="NewPassword"></label>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-label-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Change Password</button>

</form>


